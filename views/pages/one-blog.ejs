<!-- ##### Blog Wrapper Area Start ##### -->
<div class="single-blog-wrapper">

    <% blogs.forEach(function (i) { %>

    <!-- Single Blog Post Thumb -->
    <div class="single-blog-post-thumb">
        <img style="width: 100%; height: 50vh;" src="/<%= i.image %>" alt="">
    </div>

    <!-- Single Blog Content Wrap -->
    <div class="single-blog-content-wrapper d-flex">

        <!-- Blog Content -->

        <div class="single-blog--text">
            <h2>
                <%= i.title %>
            </h2>
            <div id="noidung_html">
            </div>
            <div>
                <!-- <%= i.content1 %> -->
            </div>
            <blockquote>
                <h6><i class="fa fa-quote-left" aria-hidden="true"></i> Quisque sagittis non ex eget vestibulum. Sed nec
                    ultrices dui. Cras et sagittis erat. Maecenas pulvinar, turpis in dictum tincidunt, dolor nibh
                    lacinia lacus.</h6>
                <span>Liam Neeson</span>
            </blockquote>

            <p>
                <%= i.content2 %>
            </p>
        </div>
        <% }) %>

        <!-- Related Blog Post -->
        <div class="related-blog-post">
            <% listblog.forEach(function (i, index) { %>
            <!-- Single Related Blog Post -->
            <% if(index < 4) {%>
            <div class="single-related-blog-post">
                <img src="/<%= i.image %>" alt="">
                <a href="/shop/blogs/<%= i._id %>">
                    <h5>
                        <%= i.title %>
                    </h5>
                </a>
            </div>
            <% } %>
            <% }) %>
        </div>

    </div>
</div>
<!-- ##### Blog Wrapper Area End ##### -->

