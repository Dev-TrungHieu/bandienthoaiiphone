<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb_area bg-img" style="background-image: url(/resource/img/bg-img/breadcumb.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="page-title text-center">
                    <h2>Sản phẩm</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Shop Grid Area Start ##### -->
<section class="shop_grid_area section-padding-80">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-3">
                <div class="shop_sidebar_area">

                    <!-- ##### Single Widget ##### -->
                    <div class="widget catagory mb-50">
                        <!-- Widget Title -->
                        <h6 class="widget-title mb-30">Danh mục</h6>

                        <!--  Catagories  -->
                        <div class="catagories-menu">
                            <ul id="menu-content2" class="menu-content collapse show">
                                <!-- Single Item -->
                                <li data-toggle="collapse" data-target="#clothing">
                                    <a href="#">Dòng iphone 11</a>
                                    <a href="#">Dòng iphone 10</a>
                                    <a href="#">Dòng iphone 8</a>
                                    <a href="#">Dòng iphone 7</a>
                                    <a href="#">Dòng iphone 6</a>
                                </li>
                                <!-- Single Item -->
                                <li data-toggle="collapse" data-target="#shoes" class="collapsed">
                                </li>
                                <!-- Single Item -->
                                <li data-toggle="collapse" data-target="#accessories" class="collapsed">
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- ##### Single Widget ##### -->
                    <div class="widget price mb-50">
                    </div>

                    <!-- ##### Single Widget ##### -->
                    <div class="widget color mb-50">
                        <!-- Widget Title 2 -->
                        <p class="widget-title2 mb-30">Màu</p>
                        <div class="widget-desc">
                            <ul class="d-flex">
                                <li>
                                    <a href="#" class="color1"></a>
                                </li>
                                <li>
                                    <a href="#" class="color2"></a>
                                </li>
                                <li>
                                    <a href="#" class="color3"></a>
                                </li>
                                <li>
                                    <a href="#" class="color4"></a>
                                </li>
                                <li>
                                    <a href="#" class="color5"></a>
                                </li>
                                <li>
                                    <a href="#" class="color6"></a>
                                </li>
                                <li>
                                    <a href="#" class="color7"></a>
                                </li>
                                <li>
                                    <a href="#" class="color8"></a>
                                </li>
                                <li>
                                    <a href="#" class="color9"></a>
                                </li>
                                <li>
                                    <a href="#" class="color10"></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-8 col-lg-9">
                <div class="shop_grid_product_area">
                    <div class="row">
                        <div class="col-12">
                            <div class="product-topbar d-flex align-items-center justify-content-between">
                                <!-- Total Products -->
                                <div class="total-products">
                                    <p><span><%= soluong %></span> products found</p>
                                </div>
                                <!-- Sorting -->
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <% if(soluong != 0) {%>
                        <% products.forEach(function(i) { %>
                        <!-- Single Product -->
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="single-product-wrapper">
                                <!-- Product Image -->
                                <div class="product-img">
                                    <img src="/<%= i.images[0] %>" alt="">
                                    <!-- Hover Thumb -->
                                    <img class="hover-img" src="/<%= i.images[1] %>" alt="">

                                    <!-- Product Badge -->
                                    <div class="product-badge offer-badge">
                                        <% if( i.sale > 0){ %>
                                        <span>-<%= i.sale %>%</span>
                                        <% }else { %>
                                        <span>New</span>
                                        <% } %>
                                    </div>
                                    <!-- Favourite -->
                                    <div class="product-favourite">
                                        <a href="#" class="favme fa fa-heart"></a>
                                    </div>
                                </div>

                                <!-- Product Description -->
                                <div class="product-description">
                                    <span>Iphone</span>
                                    <a href="/shop/detail/<%= i._id %>">
                                        <h6>
                                            <%= i.name %>
                                        </h6>
                                    </a>
                                    <p class="product-price">
                                        <% if(i.sale > 0) { %>
                                        <span class="old-price">
                                            <%= i.cost%>
                                        </span>
                                        <%= i.saleCost %>
                                    </p>
                                    <% } else { %>
                                    <%= i.cost %>
                                    </p>
                                    <% } %>

                                    <!-- Hover Content -->
                                    <div class="hover-content">
                                        <!-- Add to Cart -->
                                        <div class="add-to-cart-btn">
                                            <a href="#" hidden class="btn essence-btn">Add to Cart</a>
                                            <button thuoctinh="<%= i._id %>" class="btn essence-btn Add-cart">Add to
                                                cart</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                        <% } %>
                        <% if(soluong == 0) { %>
                        <h4 style="color: red;">Không tìm thấy sản phẩm cần tìm !</h4>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Shop Grid Area End ##### -->

