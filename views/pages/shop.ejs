<% products.forEach( i => { %>
<script>
    $(document).ready(function () {
        $('button[thuoctinh= <%= i._id %>]').click(() => {
            let apro = "<%= i._id %>";
            $.post("/cart/<%= i._id %>", {
                productId: apro
            }, function (data) {
                $('.noidung').html(data);
            })
        })
    })
</script>
<% }) %>
