<% include header %>
    <!-- Content page informaton -->
    <div class="container">
        <div class="row">
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <div style="height: 50px;"></div>
                <ul class="infomation">
                    <li><a href="/information">Thông tin người dùng</a></li>
                    <li><a href="/orderhistory">Lịch sử đặt hàng</a></li>
                    <li style="background-color: rgb(224, 105, 105);"><a href="#">Đổi mật khẩu</a></li>
                </ul>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            </div>
            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
                <div style="height: 50px;"></div>
                <h4>Thay đổi mật khẩu</h4>
                <% if(error == 1) { %>
                    <div class="alert alert-danger" role="alert">
                        This password is not correct !
                    </div>
                    <% } else if(error == 0) { %>

                        <% } %>
                            <form action="/doChangepassword" method="POST">
                                <div class="form-group">
                                    <label for="my-input">Tên tài khoản*</label>
                                    <input id="my-input" class="form-control disabled" type="text" value="<%= user.username %>" disabled>
                                    <label for="my-input1">Mật khẩu cũ*</label>
                                    <input id="my-input1" class="form-control" type="password" name="password" placeholder="Old password" disabled="disabled" data-toggle="tooltip" data-placement="right" title="Old password" required="required">
                                    <label for="my-input2">Mật khẩu mới*</label>
                                    <input id="my-input2" class="form-control" type="password" name="new_password" placeholder="New password" disabled="disabled" data-toggle="tooltip" data-placement="right" title="New password" required="required">
                                    <label for="my-input3">Nhập lại mật khẩu mới*</label>
                                    <input id="my-input3" class="form-control" type="password" name="entry_password" placeholder="Entry password" disabled="disabled" data-toggle="tooltip" data-placement="right" title="Entry new password" required="required">
                                    <div id="notify" class="hidden" style="color: red"></div>
                                    <button id="hidden" hidden type="submit" class="btn btn-primary mt-15" data-toggle="tooltip" data-placement="bottom" title="Click to save">Lưu</button>
                                    <div id="hidden1" hidden class="btn btn-primary mt-15" data-toggle="tooltip" data-placement="bottom" title="Click to exit" onclick="hide()">Thoát</div>
                                    <div id="show" class="btn btn-primary mt-15" data-toggle="tooltip" data-placement="bottom" title="Click to change" onclick="show()">Thay đổi</div>
                                </div>
                            </form>
            </div>
        </div>
        <div style="height: 50px;"></div>
    </div>


    <!-- ##### Footer Area Start ##### -->
