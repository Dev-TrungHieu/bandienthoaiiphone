<% include header %>
    <!-- Content page informaton -->
    <div class="container">
        <div class="row">
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <div style="height: 50px;"></div>
                <ul class="infomation">
                    <li style="background-color: rgb(224, 105, 105);"><a href="#">Thông tin người dùng</a></li>
                    <li><a href="/orderhistory">Lịch sử đặt hàng</a></li>
                    <li><a href="/changepassword">Đổi mật khẩu</a></li>
                </ul>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            </div>
            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
                <div style="height: 50px;"></div>
                <h4>Thay đổi thông tin</h4>
                <form action="/update_infomation" method="POST">
                    <div class="form-group">
                        <label for="my-input">Name*</label>
                        <input id="my-input" class="form-control" type="text" name="name" value="<%= user.name %>" disabled="disabled" required="required">
                        <label for="my-input1">Fullname*</label>
                        <input id="my-input1" class="form-control" type="text" name="fullname" value="<%= user.fullname %>" disabled="disabled" required="required">
                        <label for="my-input2">Address*</label>
                        <input id="my-input2" class="form-control" type="text" name="address" value="<%= user.address %>" disabled="disabled" required="required">
                        <label for="my-input3">Email*</label>
                        <input id="my-input3" class="form-control" type="text" name="email" value="<%= user.email %>" disabled="disabled" required="required">
                        <label for="my-input4">Phone*</label>
                        <input id="my-input4" class="form-control" type="text" name="phone" value="<%= user.phone %>" disabled="disabled" required="required">
                        <button id="hidden" hidden type="submit" class="btn btn-primary mt-15">Lưu</button>
                        <div id="hidden1" hidden class="btn btn-primary mt-15" onclick="hide()">Thoát</div>
                        <div id="show" class="btn btn-primary mt-15" onclick="show()">Thay đổi</div>
                    </div>
                </form>
            </div>
        </div>
        <div style="height: 50px;"></div>
    </div>


