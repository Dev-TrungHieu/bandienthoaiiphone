<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title>Essence - Fashion Ecommerce Template</title>

    <!-- Favicon  -->
    <link rel="icon" href="/resource/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/resource/css/core-style.css">
    <link rel="stylesheet" href="/resource/css/style.css">
    <script src="/resource/js/code.js"></script>

</head>

<body>
    <div class="noidung">

        <!-- ##### Header Area Start ##### -->
        <header class="header_area">
            <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
                <!-- Classy Menu -->
                <nav class="classy-navbar" id="essenceNav">
                    <!-- Logo -->
                    <a class="nav-brand" href="/shop/home"><img src="/resource/img/core-img/logo.png" alt=""></a>
                    <!-- Navbar Toggler -->
                    <div class="classy-navbar-toggler">
                        <span class="navbarToggler"><span></span><span></span><span></span></span>
                    </div>
                    <!-- Menu -->
                    <div class="classy-menu">
                        <!-- close btn -->
                        <div class="classycloseIcon">
                            <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                        </div>
                        <!-- Nav Start -->
                        <div class="classynav">
                            <ul>
                                <li><a href="/shop/product">Cửa hàng</a>
                                </li>
                                <li><a href="#">Trang</a>
                                    <ul class="dropdown">
                                        <li><a href="/shop/home">Trang chủ</a></li>
                                        <li><a href="/shop/product">Cửa hàng</a></li>
                                        <li><a href="/shop/blog">Tin tức</a></li>
                                        <li><a href="/shop/contact">Liên hệ</a></li>
                                    </ul>
                                </li>
                                <li><a href="/shop/blog">Tin tức</a></li>
                                <li><a href="/shop/contact">Liên hệ</a></li>
                            </ul>
                        </div>
                        <!-- Nav End -->
                    </div>
                </nav>

                <!-- Header Meta Data -->
                <div class="header-meta d-flex clearfix justify-content-end">
                    <!-- Search Area -->
                    <div class="search-area">
                        <form action="/shop/search" method="GET">
                            <input type="search" name="search" id="headerSearch" placeholder="Type for search">
                            <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </form>
                    </div>
                    <!-- Favourite Area -->
                    <div class="favourite-area">
                        <a href="#"><img src="/resource/img/core-img/heart.svg" alt=""></a>
                    </div>
                    <!-- User Login Info -->
                    <div class="user-login-info" onclick="dangnhap()">
                        <% if(!user) { %>
                        <a href="#"><img src="/resource/img/core-img/user.svg" alt="">
                            <div id="menu-user" class="menu-user">
                                <ul>
                                    <li><a href="/login">Đăng nhập</a></li>
                                    <li><a href="/resign">Đăng ký</a></li>
                                </ul>
                            </div>
                            <% } else { %>
                            <a href="#">
                                <%= user.name %>
                            </a>
                            <div id="menu-user" class="menu-user">
                                <ul>
                                    <li><a href="/logout">Đăng xuất</a></li>
                                    <li><a href="/information">Cá nhân</a></li>
                                </ul>
                            </div>
                            <% } %>
                    </div>
                    <!-- Cart Area -->
                    <div class="cart-area">
                        <a href="#" id="essenceCartBtn"><img src="/resource/img/core-img/bag.svg" alt="">
                            <span><%= length %></span></a>
                    </div>
                </div>

            </div>
        </header>
        <!-- ##### Header Area End ##### -->

        <!-- ##### Right Side Cart Area ##### -->
        <div class="cart-bg-overlay"></div>

        <div class="right-side-cart-area">

            <!-- Cart Button -->
            <div class="cart-button">
                <a href="#" id="rightSideCart"><img src="/resource/img/core-img/bag.svg" alt="">
                    <span><%= length %></span></a>
            </div>

            <div class="cart-content d-flex">

                <!-- Cart List Area -->
                <div class="cart-list">
                    <!-- Single Cart Item -->
                    <% if(cart) { %>
                    <% cart.forEach(function (i) { %>
                    <% productInCart.forEach( function (j) { %>
                    <% if(i._id == j.cart) { %>

                    <div class="single-cart-item">
                        <a href="/shop/detail/<%= i._id %>" class="product-image">
                            <img src="/<%= i.images[0] %>" class="cart-thumb" alt="">
                            <!-- Cart Item Desc -->
                            <div class="cart-item-desc">
                                <span class="product-remove"><i class="fa fa-close" aria-hidden="true"></i></span>
                                <span class="badge">Iphone</span>
                                <h6 class="mb-2"><%= i.name %></h6>
                                <p class="size">Count : <%= j.count %></p>
                                <p class="size">Sale: <%= i.sale %></p>
                                <p class="price"><%= i.saleCost %></p>
                            </div>
                        </a>
                    </div>
                    <% } %>
                    <% }) %>
                    <% }) %>
                    <% } %>
                </div>
                <!-- Cart Summary -->
                <div class="cart-amount-summary">

                    <h2>Summary</h2>

                    <ul class="summary-table">
                        <li><span>Tổng số tiền:</span> <span><%= total %></span></li>
                        <li><span>Phí vận chuyển:</span> <span>Miễn phí</span></li>
                        <li><span>------------------------------------------</span> <span></span></li>
                        <li><span>Số tiền phải trả:</span> <span><%= saleTotal %></span></li>
                    </ul>
                    <div class="checkout-btn mt-100">
                        <% if( total > 0) {%>
                        <% if(!user) { %>
                        <a href="/login" class="btn essence-btn">Đăng nhập</a>
                        <% } else { %>
                        <a href="/shop/checkout" class="btn essence-btn">Thanh toán</a>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>


    